@page "/verify"

<h3>Verify Auth</h3>
@if (isAuthenticated)
{
    <h4>@userName is authenticated</h4>
    <ul>
        <li>Registered: @isRegistered</li>
        <li>Customer: @isCustomer</li>
        <li>Admin: @isAdmin</li>
    </ul>
}
else
{
    <h4>The user is not authenticated.</h4>
}
@code {
    [CascadingParameter]
    public Task<AuthenticationState> AuthState { get; set; }
    bool isAuthenticated = false;
    string? userName = string.Empty;
    bool isCustomer = false;
    bool isAdmin = false;
    bool isRegistered = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthState;

        isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;

        if (isAuthenticated)
        {
            userName = authState.User.FindFirst(ClaimTypes.Name)?.Value ?? string.Empty;
            isRegistered = authState.User.IsInRole(UserRoles.Registered);
            isCustomer = authState.User.IsInRole(UserRoles.Customer);
            isAdmin = authState.User.IsInRole(UserRoles.Admin);
        }
    }
}
