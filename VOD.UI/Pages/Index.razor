@page "/"
@*@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]*@

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<AuthorizeView Roles="Admin">
    <Authorized>
        @context.User.FindFirst("sub")?.Value is authorized.
    </Authorized>
    <NotAuthorized>
        <h4>You are not authorized.</h4>
    </NotAuthorized>
</AuthorizeView>

